<style>
  body {
    background-color: #f0f2f5;
  }
  .card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    transition: transform 0.2s;
  }
  .card:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 15px rgba(0,0,0,0.2);
  }
  .form-control:focus {
    box-shadow: none;
    border-color: #6c63ff;
  }
  .btn-primary {
    background-color: #6c63ff;
    border: none;
  }
  .btn-primary:hover {
    background-color: #5a54d1;
  }
  .logo {
    width: 100px;
    height: 100px;
    background-size: cover;
    margin: 0 auto 20px;
  }
  .link {
    color: #6c63ff;
  }
  .link:hover {
    text-decoration: underline;
    color: #5a54d1;
  }
  /* Adicionando espaçamento entre os componentes */
  .form-group {
    margin-bottom: 20px; /* Aumente este valor para mais espaço */
  }
  .card .alert {
    margin-bottom: 20px;
  }
  .text-center {
    margin-top: 10px;
  }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
  <div class="card p-4" style="width: 100%; max-width: 400px;">
    <div class="logo"></div>
    <h3 class="text-center mb-4">Bem-vindo</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% elsif flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu email" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Digite sua senha" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Manter conectado", class: "form-check-label" %>
        </div>
      <% end %>

      <%= f.submit "Entrar", class: "btn btn-primary btn-block mt-3" %>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "link" %>
    </div>
    <div class="text-center mt-2">
      <span>Não tem uma conta? <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "link" %></span>
    </div>
  </div>
</div>
